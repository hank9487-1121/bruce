if _G.__BRUCE_LOADER__ then return end
_G.__BRUCE_LOADER__ = true

local HttpService = game:GetService("HttpService")

-- ğŸ”§ ä½ çš„ä¸»è…³æœ¬ä½ç½®ï¼ˆåªæ”¹é€™è¡Œå°±å¥½ï¼‰
local MAIN_URL = "https://raw.githubusercontent.com/hank9487-1121/bruce/main/main.lua"

-- ğŸ”¥ ç ´å¿«å–åƒæ•¸ï¼ˆæ™‚é–“ + éš¨æ©Ÿï¼‰
local cacheBuster =
    "?v=" .. tostring(os.time()) ..
    "&r=" .. tostring(math.random(100000,999999))

local function loadMain()
    local success, result = pcall(function()
        return game:HttpGet(MAIN_URL .. cacheBuster)
    end)

    if not success then
        warn("âŒ Loader ä¸‹è¼‰å¤±æ•—")
        warn(result)
        return
    end

    local fn, err = loadstring(result)
    if not fn then
        warn("âŒ è…³æœ¬è§£æå¤±æ•—")
        warn(err)
        return
    end

    -- åŸ·è¡Œä¸»è…³æœ¬
    fn()
end

loadMain()
