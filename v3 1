-- ================= æœå‹™ =================
local UserInputService = game:GetService("UserInputService")
local VirtualInputManager = game:GetService("VirtualInputManager")
local RunService = game:GetService("RunService")

-- ================= è¨­å®š =================
local PRESS_KEY = Enum.KeyCode.T   -- è¦æŒ‰çš„éµ
local TOGGLE_KEY = Enum.KeyCode.Y  -- é–‹é—œéµï¼ˆYï¼Œå¯è‡ªè¡Œæ”¹ï¼‰
local INTERVAL = 0.1               -- æŒ‰éµé–“éš”ï¼ˆç§’ï¼Œè¶Šå°è¶Šå¿«ï¼‰

-- ================= ç‹€æ…‹ =================
_G.AUTO_T = _G.AUTO_T or false

-- ================= è‡ªå‹•æŒ‰éµ =================
task.spawn(function()
    while true do
        task.wait(INTERVAL)
        if _G.AUTO_T then
            VirtualInputManager:SendKeyEvent(true, PRESS_KEY, false, game)
            task.wait(0.01)
            VirtualInputManager:SendKeyEvent(false, PRESS_KEY, false, game)
        end
    end
end)

-- ================= é–‹é—œéµ =================
UserInputService.InputBegan:Connect(function(input, gpe)
    if gpe then return end
    if input.KeyCode == TOGGLE_KEY then
        _G.AUTO_T = not _G.AUTO_T
        if _G.AUTO_T then
            print("âœ… è‡ªå‹•æŒ‰ Tï¼šé–‹å•Ÿ")
        else
            print("âŒ è‡ªå‹•æŒ‰ Tï¼šé—œé–‰")
        end
    end
end)

print("ğŸ“Œ è‡ªå‹•æŒ‰ T è…³æœ¬å·²è¼‰å…¥ï¼ˆæŒ‰ Y é–‹ / é—œï¼‰")
