Scripts["å¿«é€Ÿæ”»æ“Š"] = {
    Enabled = false,
    Func = function(self)
        local success, err = pcall(function()
            loadstring(game:HttpGet("https://raw.githubusercontent.com/hank9487-1121/bruce/refs/heads/main/ä¸Šä¸€å€‹å¿«é€Ÿæ”»æ“Šæ²’ç”¨"))()
        end)
        if not success then
            warn("å¿«é€Ÿæ”»æ“ŠåŸ·è¡Œå¤±æ•—:", err)
        end
    end,
    StopFunc = function(self)
        warn("å¿«é€Ÿæ”»æ“Šé—œé–‰ï¼ˆç„¡è‡ªå‹•é—œé–‰åŠŸèƒ½ï¼‰")
    end
}

-- ====== é£›è¡Œ GUI ======
Scripts["é£›è¡Œ GUI"] = {
    Enabled=false,
    Func=function(self)
        local success,err=pcall(function()
            loadstring(game:HttpGet("https://raw.githubusercontent.com/XNEOFF/FlyGuiV3/main/FlyGuiV3.txt"))()
        end)
        if not success then warn("é£›è¡Œ GUI åŸ·è¡Œå¤±æ•—:",err) end
    end,
    StopFunc=function(self)
        warn("é£›è¡Œ GUI ç„¡æ³•è‡ªå‹•é—œé–‰ï¼Œè«‹æ‰‹å‹•é—œé–‰")
    end
}

-- ====== è‡ªå‹•æŒ‰ T ======
Scripts["è‡ªå‹•v3"] = {
    Enabled = false,
    Func = function(self)
        local VirtualInputManager = game:GetService("VirtualInputManager")

        -- é˜²æ­¢é‡è¤‡åŸ·è¡Œ
        if self._conn then return end

        self._conn = task.spawn(function()
            while self.Enabled do
                -- æŒ‰ä¸‹ T
                VirtualInputManager:SendKeyEvent(true, Enum.KeyCode.T, false, game)
                task.wait(0.01)
                -- æ”¾é–‹ T
                VirtualInputManager:SendKeyEvent(false, Enum.KeyCode.T, false, game)

                task.wait(0.5) -- â­ æŒ‰ T é–“éš”ï¼ˆå¯èª¿ï¼Œ0.05~0.15 æœ€ç©©ï¼‰
            end
        end)

        print("âœ… è‡ªå‹•æŒ‰ T å·²é–‹å•Ÿ")
    end,

    StopFunc = function(self)
        self.Enabled = false
        self._conn = nil
        print("âŒ è‡ªå‹•æŒ‰ T å·²é—œé–‰")
    end
}

