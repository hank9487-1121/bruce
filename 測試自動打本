-- ===============================
-- Auto Buy Flame Raid Chip
-- ===============================

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local LocalPlayer = Players.LocalPlayer

-- ===== 設定 =====
local Settings = {
    Enabled = false,
    Delay = 2 -- 檢查間隔
}

-- ===== 主迴圈 =====
task.spawn(function()
    while task.wait(Settings.Delay) do
        if not Settings.Enabled then continue end

        local leaderstats = LocalPlayer:FindFirstChild("leaderstats")
        local beli = leaderstats and leaderstats:FindFirstChild("Beli")
        if not beli or beli.Value < 100000 then continue end

        -- 買「火本」副本票（Flame）
        pcall(function()
            game:GetService("ReplicatedStorage")
                .Remotes
                .CommF_:InvokeServer("BuyChip", "Flame")
        end)
    end
end)

-- ===== F6 開關 =====
UserInputService.InputBegan:Connect(function(input, gp)
    if gp then return end
    if input.KeyCode == Enum.KeyCode.F6 then
        Settings.Enabled = not Settings.Enabled
        warn("[Flame Raid] Auto Buy:", Settings.Enabled and "ON" or "OFF")
    end
end)
